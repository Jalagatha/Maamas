<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fastCatContainer"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    android:background="@drawable/fast_delivery_bg"
    android:elevation="3dp">


    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="category Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="175dp"
        app:cardCornerRadius="23dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/picFastcategory"
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/chock" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/timeLapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="10 mins"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/categoryTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/categoryTitle" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/timeLapse"
        app:layout_constraintEnd_toStartOf="@+id/timeLapse"
        app:layout_constraintTop_toTopOf="@+id/timeLapse"
        app:srcCompat="@drawable/chronometer" />
</androidx.constraintlayout.widget.ConstraintLayout>